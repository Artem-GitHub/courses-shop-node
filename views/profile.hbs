<h1>Profile</h1>

<div class="row">
	{{# if user.photoUrl}}
	<div class="col s6">
		<img class="photo" src="/{{user.photoUrl}}" alt="Profile photo - {{user.name}}">
	{{else}}
		<p>No profile photo</p>
	{{/if}}
	</div>
	<div class="col s6">
		<form action="/profile" method="POST" enctype="multipart/form-data">
			<p>Your email: <strong>{{user.email}}</strong></p>
			<div class="input-field">
				<input name="name" id="name" type="text" value="{{user.name}}" class="validate" required min="1" value="{{user.name}}">
				<label for="name">Your name</label>
				<span class="helper-text" data-error="This field cannot be empty"></span>
    		</div>

    		<div class="file-field input-field">
      			<div class="btn">
        			<span>Profile photo</span>
        			<input type="file" name="photo">
      			</div>
      			<div class="file-path-wrapper">
        			<input class="file-path validate" type="text">
      			</div>
    		</div>
    		<input type="hidden" name="_csrf" value="{{csrf}}">
    		<button type="submit" class="btn">Edit</button>
		</form>
	</div>
</div>

