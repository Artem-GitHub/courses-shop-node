<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a class="active" href="#register">Create an account</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      <form action="/auth/login" method="post" novalidate>
        <h4>Login to store</h4>

        {{#if logError}}
          <p class="alert">{{logError}}</p>
        {{/if}}

        <div class="input-field">
          <input name="email" id="email" type="text" class="validate" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Enter email"></span>
        </div>
        <div class="input-field">
          <input name="password" id="password" type="password" class="validate" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
          <p><a href="/auth/reset">Forgot your password?</a></p>
          <input type="hidden" name="_csrf" value="{{csrf}}">
          <button class="btn btn-primary" type="submit">Login</button>
        </div>
      </form>
    </div>

    <div id="register" class="col s6 offset-s3">
      <form action="/auth/register" method="post" novalidate>
        <h4>Create an account</h4>

        {{#if regError}}
          <p class="alert">{{regError}}</p>
        {{/if}}

        <div class="input-field">
          <input name="name" id="name" type="text" class="validate" required>
          <label for="name">Your name</label>
          <span class="helper-text" data-error="Enter your name"></span>
        </div>
        <div class="input-field">
          <input name="email" id="regemail" type="text" class="validate" required>
          <label for="regemail">Email</label>
          <span class="helper-text" data-error="Enter email"></span>
        </div>
        <div class="input-field">
          <input name="password" id="regpassword" type="password" class="validate" required>
          <label for="regpassword">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>
        <div class="input-field">
          <input name="confirm" id="confirm" type="password" class="validate" required>
          <label for="confirm">Confirm password</label>
          <span class="helper-text" data-error="Enter password"></span>
          <input type="hidden" name="_csrf" value="{{csrf}}">
          <button class="btn btn-primary" type="submit">Create</button>
        </div>
      </form>
    </div>
  </div>
