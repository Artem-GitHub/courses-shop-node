<h1>Edit course {{title}}</h1>

<form action="/courses/edit" method="POST">
	<div class="input-field">
		<input name="title" id="title" type="text" class="validate" required min="1" value="{{course.title}}">
		<label for="title">Course Name</label>
		<span class="helper-text" data-error="Wrong name"></span>
    </div>
	<div class="input-field">
		<input name="price" id="price" type="number" class="validate" required min="1" value="{{course.price}}">
		<label for="price">Course Price</label>
		<span class="helper-text" data-error="Wrong price"></span>
    </div>
	<div class="input-field">
		<input name="img" id="img" type="text" class="validate" required min="1" value="{{course.img}}">
		<label for="img">URL Img</label>
		<span class="helper-text" data-error="Wrong text"></span>
		<input type="hidden" value="{{course.id}}" name="id">
		<input type="hidden" name="_csrf" value="{{csrf}}">
		<button type="submit" class="btn btn-primary">Edit</button>
    </div>
</form>
<form action="/courses/remove" method="POST">
	<input type="hidden" name="id" value="{{course.id}}">
	<input type="hidden" name="_csrf" value="{{csrf}}">
	<button type="submit" class="btn red">Remove course</button>
</form>